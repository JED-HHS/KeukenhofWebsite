@{
    ViewData["Title"] = "FAQ";
    Layout = "~/Views/Shared/_Header.cshtml";
}

<head>
    <link href="~/css/FAQ_css.css" type="text/css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/yourcode.js"></script>
</head>

<body>
    <img class="faq_image" src="~/images/faq_image.svg" alt="faq_image">

    <div class="faq_info">
        <h1 class="faq_title">
            Veelgestelde vragen
        </h1>

        <div class="faq_open">
            <p class="open_text_left">In 2020 is Keukenhof open van 21 maart tot en met 10 mei<br />tussen 9:00-17:00 uur.</p>
        </div>
        <div class="faq_busy">
            <p class="open_text_right">In alle rust genieten van Keukenhof? Voor 10:30 uur en na 16:00 uur is het minder druk.</p>
        </div>
    </div>

    <div class="questions">
        <div class="access">
            <h1 class="bereikbaarheid">Bereikbaarheid</h1>
            <button class="collapsible">
                <p class="coll_q">Hoe kan ik het beste naar Keukenhof reizen?</p><i class="fas fa-angle-down arrow"></i>
            </button>
        </div>
    </div>
</body>
